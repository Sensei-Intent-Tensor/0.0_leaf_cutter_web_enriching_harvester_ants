{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "base_item.json",
  "title": "Base Scraped Item",
  "description": "Common fields for all scraped items",
  "type": "object",
  "properties": {
    "_id": {
      "type": "string",
      "description": "Unique identifier for this item"
    },
    "_source": {
      "type": "string",
      "description": "Source domain/site"
    },
    "_url": {
      "type": "string",
      "format": "uri",
      "description": "Original URL scraped"
    },
    "_scraped_at": {
      "type": "string",
      "format": "date-time",
      "description": "When the item was scraped"
    },
    "_version": {
      "type": "integer",
      "description": "Schema version",
      "default": 1
    }
  },
  "required": ["_source", "_scraped_at"]
}
